<% provide(:title, "New Contract") %>
<%= form_for :contract, :url => {action: "generate_contract", class: "form"} do |form| %>
<div class="jumbotron">
  <h2 class="text-center">New Contract</h2>
  <div class="field form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :contract_title, class: "form-control", required: "required" %>
  </div>

  <div class="field form-group">
    <%= form.label :renter %>
    <%= form.text_field :renter, id: :contract_renter, class: "form-control", required: "required" %>
  </div>

  <div class="field form-group">
    <%= form.label :start_date %>
    <%= form.datetime_select :start_date, id: :contract_start_date, :discard_hour => true, class: "form-control", required: "required" %>
  </div>

  <div class="field form-group">
    <%= form.label :end_date %> 
    <%= form.datetime_select :end_date, id: :contract_end_date, :discard_hour => true, class: "form-control", required: "required" %>
  </div>

  <div class="actions form-group">
    <%= form.submit  :class => "btn btn-default" %>
  </div>
</div>
<% end %>