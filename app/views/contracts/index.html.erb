<% provide(:title, "Contract List") %>

<h1>Contracts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Renter</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
    <tr>
      <td><%= contract.title %></td>
      <td><%= contract.renter %></td>
      <td><%= contract.start_date.strftime("%F") %></td>
      <td><%= contract.end_date.strftime("%F") %></td>
      <td><%= link_to 'Details', contract %></td>
      <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
      <td><%= link_to 'Delete', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contract', new_contract_path %>
